<UserControl x:Class="CPS.Views.Security.ChangePassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <StackPanel Grid.Row="0">
            <Label Content="Old Password" Target="{Binding ElementName=txtOldPassword}" />
            <PasswordBox Name="txtOldPassword" />
            <Label Content="New Password" Target="{Binding ElementName=txtNewPassword}" />
            <PasswordBox Name="txtNewPassword" />
            <Label Content="Confirm New Password" Target="{Binding ElementName=txtConfirmNewPassword}" />
            <PasswordBox Name="txtConfirmNewPassword" />
            <Grid>
                <Button Content="Change Password" Margin="0,15,100,0" Name="btnChangePassword" Click="btnChangePassword_Click" HorizontalAlignment="Center" />
                <Button Content="Clear" Name="btnClear" Margin="150,15,0,0" Click="btnClear_Click" HorizontalAlignment="Center" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

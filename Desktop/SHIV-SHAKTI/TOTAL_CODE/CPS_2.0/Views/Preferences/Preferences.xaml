<UserControl x:Class="CPS.Views.Preferences.Preferences"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Select Printer" Target="{Binding ElementName=cbPrinter}" />
            <ComboBox Name="cbPrinter" SelectionChanged="cbPrinter_SelectionChanged"></ComboBox>
            <Label Content="Select Request Tray" Target="{Binding ElementName=cbRequestTray}" />
            <ComboBox Name="cbRequestTray"></ComboBox>
            <Label Content="Select Cheque Tray" Target="{Binding ElementName=cbChequeTray}" />
            <ComboBox Name="cbChequeTray"></ComboBox>
            <Button Content="Save Preferences" Name="btnSave" Margin="15" HorizontalAlignment="Center" Click="btnSave_Click" />
        </StackPanel>
    </Grid>
</UserControl>

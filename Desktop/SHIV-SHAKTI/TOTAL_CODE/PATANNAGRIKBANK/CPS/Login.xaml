<Window x:Class="CPS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="300" Width="400"
        Icon="Content/Logo.ico"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock FontSize="20" TextAlignment="Center" VerticalAlignment="Center" Padding="5" Foreground="DarkBlue" Text="Cheque Printing System" />
            <Label Content="User Id" Target="{Binding ElementName=txtUserId}" />
            <TextBox Name="txtUserId" />
            <Label Content="Password" Target="{Binding ElementName=txtPassword}" />
            <PasswordBox Name="txtPassword" />
            <Button Margin="15" Content="Login" Name="btnLogin" Click="btnLogin_Click" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
